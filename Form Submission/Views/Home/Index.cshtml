@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Enter your information</h1>
    <form action="register" method="POST">
        <h3>First Name: <input type="text" name="firstName"></h3>
        <h3>Last Name: <input type="text" name="lastName"></h3>
        <h3>Age: <input type="text" name="age"></h3>
        <h3>Email Address: <input type="text" name="email"></h3>
        <h3>Password: <input type="password" name="password"></h3>
        <button type="submit">Submit</button>
    </form>
</div>